<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BulletinFragment">


    <EditText
        android:drawableRight="@drawable/ic_search"
        android:id="@+id/edt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:hint="Search..."
        android:background="@drawable/custum_background_buttom_1"
        android:paddingHorizontal="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:background="@drawable/custum_background_buttom"
        android:text="Going"
        app:layout_constraintStart_toStartOf="@+id/edt"
        app:layout_constraintTop_toBottomOf="@+id/edt" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginStart="16dp"
        android:text="PAST"
        android:background="@drawable/custum_background_buttom_1"
        app:layout_constraintStart_toEndOf="@+id/bt1"
        app:layout_constraintTop_toTopOf="@+id/bt1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_24sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt2" />


</androidx.constraintlayout.widget.ConstraintLayout>